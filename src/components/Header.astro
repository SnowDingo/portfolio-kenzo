---
import "../style/global.css"

const currentpage = Astro.url.pathname

---

<header class="bg-white/70 backdrop:blur text-gray-900 shadow-sm py-4 px-2 ">
    <nav class="flex flex-row justify-between px-2 max-w-screen-xl mx-auto  gap-2 md:gap-4">
        <a href="/" class={currentpage === "/" ? "border-b-2 transition-all border-rose-500" : "hover:text-gray-900"}>Home</a>
        <div class="flex flex-row justify-between gap-4 md:gap-10">
            <a href="/about" class={currentpage === "/about" ? "border-b-2 border-rose-500" : "hover:text-gray-900"}>About</a>
        <a href="/works" class={currentpage === "/works" ? "border-b-2 border-rose-500" : "hover:text-gray-900"}>Works</a>
        <a href="/contact" class={currentpage === "/contact" ? "border-b-2 border-rose-500" : "hover:text-gray-900"}>Contact</a>
        </div>
        
    </nav>
</header>