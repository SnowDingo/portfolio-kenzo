---
import Image from "astro/components/Image.astro";
import Layout from "../layouts/Layout.astro";
import "../style/contactform.css"

---

<Layout>
<div>
    <div class="flex flex-row items-center my-4" >
        <Image src={"/suits/Club.svg"} alt={"Club"} width={32} height={32} />
        <h1>Contact:</h1>
    </div>
    <div>
        <p>Email: Snowdingo.tech@gmail.com</p>
        <p>Discord, X, Devpost, Medium: @Snowdingo</p>
    </div>
    <div>
        <h2>Contact Me Directly:</h2>
        <form class="form">
            <label>Your Name:</label>
            <input placeholder="please enter your first and last name" />
            <label>Your Email-Adress:</label>
            <input placeholder="please enter your email" />
            <label>Message:</label>
            <textarea></textarea>
            <button>Send</button>
        </form>
    </div>

</div>
</Layout>